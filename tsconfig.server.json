{
  "compilerOptions": {
    "outDir": "./dist-server",
    "noImplicitAny": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es6",
    "sourceMap": true,
    "esModuleInterop": true,
    "typeRoots" : ["./node_modules/@types", "./@types"]
  },
  "include": [
    "src/server/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
